    "repository": {
        "type": "git",
        "url": "https://github.com/F1r3Pr1nc3/paradox-formatter"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Formatters"
    ],
    "capabilities": {
        "documentFormattingProvider": "true",
        "documentRangeFormattingProvider": "true"
    },
    "contributes": {
        "formatters": [
            {
                "language": "paradox",
                "displayName": "PDX Script Formatter"
            },
            {
                "language": "stellaris",
                "displayName": "PDX Script Formatter"
            }
        ],
        "languages": [
            {
                "id": "paradox",
                "aliases": [
                    "paradox",
                    "Paradox"
                ],
                "extensions": [
                    ".txt",
                    ".mod"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "stellaris",
                "aliases": [
                    "stellaris",
                    "Stellaris"
                ],
                "extensions": [
                    ".txt",
                    ".mod"
                ],
                "configuration": "./language-configuration.json"
            },
			{
				"id": "hoi4"
			},
			{
				"id": "ck2"
			},
			{
				"id": "eu4"
			},
			{
				"id": "imperator"
			},
			{
				"id": "vic2"
			},
			{
				"id": "ck3"
			},
			{
				"id": "vic3"
			},
			{
				"id": "eu5"
			}
        ],
        "grammars": [
            {
                "language": "paradox",
                "scopeName": "source.mod",
                "path": "./syntaxes/paradox.tmLanguage.json"
            },
            {
                "language": "stellaris",
                "scopeName": "source.mod",
                "path": "./syntaxes/stellaris.tmLanguage.json"
            },
            {
                "language": "hoi4",
                "scopeName": "source.mod",
                "path": "./syntaxes/hoi4.tmLanguage.json"
            },
            {
                "language": "ck2",
                "scopeName": "source.mod",
                "path": "./syntaxes/ck2.tmLanguage.json"
            },
            {
                "language": "eu4",
                "scopeName": "source.mod",
                "path": "./syntaxes/eu4.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:paradox",
        "onLanguage:stellaris",
        "onLanguage:hoi4",
        "onLanguage:ck2",
        "onLanguage:eu4",
        "onLanguage:imperator",
        "onLanguage:vic2",
        "onLanguage:ck3",
        "onLanguage:vic3",
        "onLanguage:eu5",
        "onCommand:paradox-script-formatter.formatDocument",
        "onCommand:paradox-script-formatter.formatSelection"
    ],
    "main": "./out/extension",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
