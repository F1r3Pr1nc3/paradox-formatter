{
    "name": "paradox-script-formatter",
    "displayName": "PDX Script Formatter",
    "description": "A robust, whitespace-aware formatter for Paradox Interactive game scripts, powered by a sophisticated Python library for advanced logic optimization.",
    "private": true,
    "icon": "icon.png",
    "publisher": "f1r3pr1nc3",
    "author": "sth4nothing",
