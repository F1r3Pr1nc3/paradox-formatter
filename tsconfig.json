{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src", // This tells TypeScript where your source files are
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts" // Explicitly include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "**/*.spec.ts"
  ]
}
